<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.migrant.pir" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".controller.ApplicationController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomAppTheme" >
        <activity
            android:name=".activity.home.ParentActivity"
            android:label="@string/title_activity_parent" />
        <activity
            android:name=".activity.home.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.home.MainActivity"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".activity.home.RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
    </application>

</manifest>
